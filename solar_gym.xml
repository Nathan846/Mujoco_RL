<mujoco model="solar_panel_placement">

    <!-- Option settings -->
    <option timestep="0.01" gravity="0 0 -9.81"/>

    <!-- Default settings -->
    <default>
        <geom size="0.05"/>
        <joint damping="1"/>
    </default>

    <!-- Assets like material and textures -->
    <asset>
        <!-- Material for glass -->
        <material name="glass_material" rgba="0.7 0.9 1 0.4" specular="0.8" shininess="0.5"/>
        
        <!-- Material for steel -->
        <material name="steel_material" rgba="0.8 0.8 0.8 1" specular="0.9" shininess="1"/>
    </asset>

    <worldbody>
        <body name="steel_stand" pos="0 0 0">
            <geom type="box" size="0.2 0.2 0.01" material="steel_material"/>
            <geom type="box" size="0.05 0.05 0.3" material="steel_material" pos="0 0 0.15"/>
        </body>
        <body name="solar_panel" pos="0 0 0.2">
            <geom type="box" size="0.4 0.4 0.01" material="glass_material"/>
        </body>

        <body name="robot" pos="0 -0.5 0.2">
            <joint name="robot_slide" type="slide" axis="1 0 0"/>
            <geom type="capsule" fromto="0 0 0 0.2 0 0.2" size="0.05"/>
            <body name="end_effector" pos="0.2 0 0.2">
                <geom type="sphere" size="0.03"/>
                <joint name="end_effector_joint" type="ball"/>
            </body>
        </body>
    </worldbody>
</mujoco>
